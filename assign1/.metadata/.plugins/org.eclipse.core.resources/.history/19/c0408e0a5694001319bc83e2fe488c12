#!/usr/bin/python

import node
import reader
import validation

"""
This file is the main file for this project, if you run this file, you can get the decision tree printed.
"""
#read the file first
reading = reader.readFile("training.txt")
content = reading.read_file_content()

#calculate the data
root = node.Node(reading.get_attributes(), [], None, content, "isPromotor", 0.10)
root.run()

#validate the result
x = validation.Validate("validation.txt", root, "isPromotor")

x.classification()

print 1- x.cal_error()